{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "compilerOptions":
  {
    "baseUrl": ".",
    "paths":
    {
      "@sylo/polkadot-api": ["packages/api/src"],
      "@sylo/polkadot-api/*": ["packages/api/src/*"],
      "@sylo/polkadot-api-derive": ["packages/api-derive/src"],
      "@sylo/polkadot-api-derive/*": ["packages/api-derive/src/*"],
      "@sylo/polkadot-rpc-core": ["packages/rpc-core/src"],
      "@sylo/polkadot-rpc-core/*": ["packages/rpc-core/src/*"],
      "@sylo/polkadot-rpc-provider": ["packages/rpc-provider/src"],
      "@sylo/polkadot-rpc-provider/*": ["packages/rpc-provider/src/*"],
      "@sylo/polkadot-rpc-rx": ["packages/rpc-rx/src"],
      "@sylo/polkadot-rpc-rx/*": ["packages/rpc-rx/src/*"],
      "@sylo/polkadot-extrinsics": ["packages/type-extrinsics/src"],
      "@sylo/polkadot-extrinsics/*": ["packages/type-extrinsics/src/*"],
      "@sylo/polkadot-jsonrpc": ["packages/type-jsonrpc/src"],
      "@sylo/polkadot-jsonrpc/*": ["packages/type-jsonrpc/src/*"],
      "@sylo/polkadot-storage": ["packages/type-storage/src"],
      "@sylo/polkadot-storage/*": ["packages/type-storage/src/*"],
      "@sylo/polkadot-types": ["packages/types/src"],
      "@sylo/polkadot-types/*": ["packages/types/src/*"]
    },
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ],
    // FIXME This is a HACK that is needed for the current mock-socket defs
    "skipLibCheck": true
  }
}
